model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String

  fullname String?
  username String
  role     Role

  Workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId String?
}

model Workspace {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  slug String @unique

  users User[]
}

enum Role {
  ADMIN
  USER
}
